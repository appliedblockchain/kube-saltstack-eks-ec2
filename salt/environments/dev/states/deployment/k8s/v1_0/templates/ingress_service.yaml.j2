apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: ingress-{{ name }}
  annotations:
    # use the shared ingress-nginx
    kubernetes.io/ingress.class: "nginx"
spec:
  tls:
    - hosts:
      - {{ name }}.{{ domain }}
      secretName: {{ domain }}
  rules:
  - host: {{ name }}.{{ domain }}
    http:
      paths:
      - path: {{ path }}
        backend:
          serviceName: {{ name }}
          servicePort: {{ port }}
